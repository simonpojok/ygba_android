<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ygba.youthgobudget">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog"
            android:label="Operation Successful"
            android:name=".dialogs.SuccessActivity" />
        <activity android:name=".sponsors.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".dialogs.SubCountyPickerActivity"
            android:label="Sub County Picker"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
        <activity
            android:name=".dialogs.DistrictPickerActivity"
            android:label="Pick District"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".community_wishes.CommunityWishesActivity" />
        <activity
            android:name=".allocation.AllocationActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".history.HistoryActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".help.HelpActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".polls.PollActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".budget_cycle.BudgetCycleActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".local_government.LocalGovernmentActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".budget_information.BudgetInformationActivity"
            android:label="Budget Information"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".water_and_environment.WaterEnvironmentActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".social_development.SocialDevelopmentListActivity" />
        <activity
            android:name=".dialogs.DatePickerActivity"
            android:label="Pick Date"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
        <activity
            android:name=".social_development.SocialDevelopmentActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".education.EducationActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".health.HealthActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".agriculture.AgricultureActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>